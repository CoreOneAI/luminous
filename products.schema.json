{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/salon-inventory.schema.json",
  "title": "Salon Inventory Product",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "brand",
    "category",
    "price_cents",
    "inStock",
    "image"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "brand": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "pattern": "^[A-Za-z]+\\s\\/\\s.+$"
    },
    "price_cents": {
      "type": "integer",
      "minimum": 100
    },
    "inStock": {
      "type": "boolean"
    },
    "image": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "benefits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "usage": {
      "type": "string"
    },
    "traits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hairType": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "concerns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "crossSell": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}